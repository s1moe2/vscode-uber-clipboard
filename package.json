{
    "name": "vscode-uber-clipboard",
    "displayName": "vscode-uber-clipboard",
    "description": "",
    "version": "0.0.1",
    "publisher": "diogomsimoes",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "uberclipboard.copy",
                "title": "Copy to UberClipboard"
            },
            {
                "command": "uberclipboard.cut",
                "title": "Cut to UberClipboard"
            },
            {
                "command": "uberclipboard.paste",
                "title": "Paste from UberClipboard"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+c",
                "mac": "cmd+c",
                "when": "editorFocus",
                "command": "uberclipboard.copy"
            },
            {
                "key": "ctrl+x",
                "mac": "cmd+x",
                "when": "editorFocus",
                "command": "uberclipboard.cut"
            },
            {
                "key": "ctrl+v",
                "mac": "cmd+v",
                "when": "editorFocus",
                "command": "uberclipboard.paste"
            },
            {
                "key": "ctrl+shift+v",
                "mac": "cmd+shift+v",
                "when": "editorFocus",
                "command": "uberclipboard.selectPaste"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test",
        "commit": "git-cz"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "commitizen": "^3.0.2",
        "cz-conventional-changelog": "^2.1.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
